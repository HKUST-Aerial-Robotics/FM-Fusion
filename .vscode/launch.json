{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "IntegrateInstanceMap",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cpp/IntegrateInstanceMap",
            "args": [
                "--config",
                "${workspaceFolder}/config/fusion_portable.yaml",
                "--root",
                "/data2/FusionPortable/scans/bday_03",
                // "/data2/ScanNet/val/scene0011_01",
                // "--data_association","/data_association.txt",
                // "--trajectory","/trajectory.log",
                // "--max_frames","1500",
                "--frame_gap","5",
                "--output","/data2/FusionPortable/output"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "IntegrateRGBD",
